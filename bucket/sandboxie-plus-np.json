    "pre_install": [
        "if (!(is_admin)) {",
        "    error \"Administrator rights are required to install $app.\"",
        "    exit 1",
        "}"
    ],
    "installer": {
        "file": "setup.exe",
        "args": [
            "/suppressmsgboxes",
            "/verysilent",
            "/dir=\"$dir\"",
