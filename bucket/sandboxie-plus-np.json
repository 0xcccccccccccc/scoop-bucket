    "extract_dir": "sandboxie-plus",
    "installer": {
        "script": [
            "if (!(is_admin)) {",
            "    error \"Administrator rights are required to install $app.\"",
            "    exit 1",
            "}",
            "",
            "Start-Job {",
            "    while ($configurator_process -eq $null) {",
            "        Start-Sleep -Milliseconds 250",
            "        $configurator_process = Get-Process | Where-Object { $_.name -eq 'SandMan' }",
            "    }",
            "",
            "    $configurator_process | ForEach-Object { Stop-Process -Id $_.Id }",
            "} | Out-Null",
            "",
            "Invoke-ExternalCommand \"$dir\\setup.exe\" -ArgumentList @('/VERYSILENT', '/DIR=\"$dir\"', '/NORESTARTAPPLICATIONS') | Out-Null"
        ]
    },
    "post_install": "Remove-Item -Recurse \"$([Environment]::GetFolderPath('commonstartmenu'))\\Programs\\Sandboxie-Plus\"",
    "uninstaller": {
        "script": [
            "if (!(is_admin)) {",
            "    error \"Administrator rights are required to uninstall $app.\"",
            "    exit 1",
            "}",
            "Stop-Process -ErrorAction Ignore -Name SandMan",
            "Stop-Process -ErrorAction Ignore -Name SbieSvc",
            "& \"$env:ProgramFiles\\Barrier\\unins000.exe\" /VERYSILENT /NOCANCEL /NORESTART"
        ]
    },
    "shortcuts": [
        [
            "SandMan.exe",
            "Sandboxie-Plus"
        ]
    ],
    "checkver": {
        "github": "https://github.com/sandboxie-plus/Sandboxie"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/$version/Sandboxie-Plus-x64-v$version.exe#/setup.ex"
            },
            "32bit": {
                "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/$version/Sandboxie-Plus-x86-v$version.exe#/setup.ex"
            }
        }
    }
}
